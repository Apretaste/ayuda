<div class="row">
	<div class="col s12">
		<ul id="chat" class="chat">
			<% ticket.comments.forEach(function(item) { %>
				<li class="<%= item.position %>">
					<div class="person-avatar circle" face="<%= item.avatar %>" color="<%= item.avatarColor %>" size="30"></div>
					<div class="head">
						<a href="#!" class="<%= item.gender %>">@<%= item.username %></a>
						<span class="date"><%= moment(item.inserted).format('MMM D, YYYY h:mm A') %></span>
					</div>
					<span class="text"><%= item.comment %></span>
				</li>
			<% }) %>
		</ul>
	</div>
</div>

<!-- FLOATING BUTTON -->

<div class="bottom-space"></div>

<div class="fixed-action-btn">
	<% if(ticket.status == 'CLOSED' ) { %>
		<a class="btn-floating waves-effect waves-light btn-large green" href="#!" onclick="apretaste.send({command: 'AYUDA SOPORTE'})">
			<i class="material-icons">arrow_back</i>
		</a>
	<% } else { %>
		<a class="btn-floating waves-effect waves-light grey second" href="#!" onclick="apretaste.send({command: 'AYUDA SOPORTE'})">
			<i class="material-icons">arrow_back</i>
		</a>
		<a href="#newTicketModal" class="btn-floating btn-large green waves-effect waves-light modal-trigger">
			<i class="large material-icons">message</i>
		</a>
	<% } %>
</div>

<!-- MODAL NEW TICKET -->

<div id="newTicketModal" class="modal bottom-sheet">
	<div class="modal-content">
		<div class="input-field">
			<textarea id="message" ticket="<%= ticket.id %>" username="<%= owner.username %>" gender="<%= owner.gender %>" avatar="<%= owner.avatar %>" avatarColor="<%= owner.avatarColor %>" class="materialize-textarea" oninput="checkLength(200)"></textarea>
			<label for="message">Escriba su comentario</label>
			<span class="helper-text">Restante: 200</span>
		</div>
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
		<a onclick="chat()" class="modal-close waves-effect waves-green btn-flat green-text">Enviar</a>
	</div>
</div>
